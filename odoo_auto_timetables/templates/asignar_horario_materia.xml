<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="horarios_extend.modal_horario_grupo" name="Horarios">
            <div class="modal fade" id="modal_horario_grupo" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static"
                 data-keyboard="false">
                <div class="modal-dialog  modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Horarios</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">
                                    <i class="fa fa-times"/>
                                </span>
                            </button>
                        </div>
                        <div class="modal-body" id="modal_horario_grupo_body">
                            <form id="form_horarios">
                                <input type="hidden" name="periodo_id" t-attf-value="{{periodo_id.id}}"
                                       id="input_periodo_id_salones"/>
                                <div class="alert hidden" role="alert" id="alerta_horario">
                                    <strong></strong>
                                </div>
                                <input type="hidden" id="csrf_token" name="csrf_token"
                                       t-att-value="request.csrf_token()"/>
                                <input id="salon_id" name="salon_id" value="" type="hidden"/>
                                <input id="grupo_id" name="grupo_id" value="" type="hidden"/>
                                <input id="horario_id" name="horario_id" value="" type="hidden"/>
                                <input id="id_materia" name="id_materia" value="" type="hidden"/>
                                <input id="id_horario_materia" name="id_horario_materia" value=""
                                       type="hidden"/>
                                <input type="hidden" id="total_horas_semana_materia"
                                       name="total_horas_semana_materia" value=""/>

                                <div id="container_form_horario">

                                </div>

                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar
                            </button>
                            <div id="btnGuardarDatosGrupo" class="btn btn-primary">
                                Guardar
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>