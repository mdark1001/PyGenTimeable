<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="horarios_extend" name="Horarios">
            <t t-call="website.layout">
                <title>Horarios</title>
                <meta charset="UTF-8"/>
                <link rel="stylesheet" href="/escolares/static/src/css/horarios_web_site.css"/>
                <div id="wrap">
                    <input type="hidden" id="csrf_token" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="main-container-horarios">
                        <h1>Bienvenido</h1>
                        <div class="row">
                            <div class="col-md-8">
                                <div id="mensaje" class="alert hidden">
                                    <strong></strong>
                                    <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            <div class="row">
                                <div class="form-group col-xs-12 col-lg-5 col-sm-5">

                                </div>
                            </div>
                            <div class="row">
                                <input type="hidden" name="periodo_id" t-attf-value="{{periodo_id.id}}"
                                       id="input_periodo_id"/>
                                <div class="col-xs-12 col-lg-12 col-sm-12">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Horarios</h3>
                                        </div>
                                        <div class="panel-body" style="min-height:400px;">

                                            <ul class="nav nav-tabs">
                                                <li class="active">
                                                    <a data-toggle="tab" href="#home">Grupos</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div id="home" class="tab-pane fade in active">
                                                    <h3>Grupos</h3>
                                                    <a class="btn btn-danger pull-right"
                                                       t-att-href="'/web#id=%s&amp;view_type=form&amp;model=ops4g.periodo_carrera_grupos' % (id)">
                                                        <span class="fa fa-long-arrow-left"/>
                                                        Regresar
                                                    </a>
                                                    <div class="row">
                                                        <div class="panel-group" id="grupos" role="tablist"
                                                             aria-multiselectable="true">
                                                            <t t-foreach="horarios or []" t-as="grupo">
                                                                <t t-call="horarios_extend.panel_horario"/>

                                                            </t>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <t t-call="horarios_extend.modal_horario_grupo"/>
            </t>
            <script type='text/javascript'>
                var horas=null
                var materias=[]
            </script>

            <script type="text/javascript" src="/horarios_extend/static/src/js/rq_comun.js"/>
            <script type="text/javascript" src="/horarios_extend/static/src/js/horario.js"/>
        </template>
    </data>
</odoo>