<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="odoo_auto_timetables.horarios_simple" name="Horarios simple">
            <t t-call="website.layout">
                <title>Horarios</title>
                <meta charset="UTF-8"/>
                <link rel="stylesheet" href="/escolares/static/src/css/horarios_web_site.css"/>
                <link rel="stylesheet" href="/odoo_auto_timetables/static/src/css/main.css"/>
                <link rel="stylesheet" href="/odoo_auto_timetables/static/src/css/animate.css"/>
                <div id="wrap">
                    <input type="hidden" id="csrf_token" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" id="id_horario_carrera_grupo" name="id_horario_carrera_grupo"
                           t-att-value="id_horario_carrera_grupo"/>
                    <div class="main-container-horarios">
                        <h1>Bienvenido</h1>
                        <div class="row">
                            <div class="col-md-8">
                                <div id="mensaje" class="alert hidden">
                                    <strong></strong>
                                    <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            <div class="row">
                                <div class="col-lg-2 col-sm-2 hidden-xs" id="horario-container-cards">
                                    <t t-foreach="grupos or []" t-as="grupo">
                                        <div class="card card-default">
                                            <div class="card-header">
                                                <b t-field="grupo.grupo_id"/>
                                            </div>
                                            <div class="card-body">
                                                <p>
                                                    <li>Total de materias:
                                                        <t t-esc="len(grupo.horario_id)"/>
                                                    </li>
                                                    <li>
                                                        Estatus:
                                                        <span t-field="grupo.state"/>
                                                    </li>
                                                </p>
                                                <div class="card-footer">
                                                    <button type="button" class="btn btn-small btn-info ver_horario"
                                                            t-attf-data-horario_id="{{ grupo.id }}">
                                                        <i class="fa fa-calendar-o" aria-hidden="true"/>
                                                    </button>
                                                    <button type="button" class="btn btn-small btn-warning solucion"
                                                            t-attf-data-horario_id="{{ grupo.id }}">
                                                        <i class="glyphicon glyphicon-retweet"/>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </t>

                                </div>
                                <div class="col-xs-12 hidden-sm hidden-lg hidden-md" id="horario-container-select">
                                    <select class="form-control" id="select_grupos">
                                        <option value="">-- Seleccione una opci√≥n --</option>
                                        <t t-foreach="grupos or []" t-as="grupo">
                                            <option t-attf-value="{{ grupo.id }}">
                                                <b t-field="grupo.grupo_id"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-xs-12 col-lg-10 col-sm-10">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-lg-3">
                                            <div class="table-resposive">
                                                <table class="table table-bordered table-striped table-condensed"
                                                       id="table-horario-info">
                                                    <thead>
                                                        <tr class="info">
                                                            <th>Materia</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="table_list_materia">

                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-lg-9">
                                            <div class="table-resposive">
                                                <table class="table table-bordered table-striped table-condensed"
                                                       id="table-horario">
                                                    <thead>
                                                        <tr class="info">
                                                            <th>Hora</th>
                                                            <th>L</th>
                                                            <th>M</th>
                                                            <th>Mi</th>
                                                            <th>J</th>
                                                            <th>V</th>
                                                            <th>S</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="table_horario_body">
                                                        <t t-foreach="horas" t-as="h">
                                                            <tr>
                                                                <td>
                                                                    <t t-esc="h['name']"/>
                                                                </td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
            <script type="text/javascript">
                const HORAS =<t t-esc="horas"/>;
            </script>
            <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"/>-->
            <script type="text/javascript" src="/odoo_auto_timetables/static/src/js/rq_comun.js"/>
            <script type="text/javascript" src="/odoo_auto_timetables/static/src/js/horario_simple_render.js"/>
            <script type="text/javascript" src="/odoo_auto_timetables/static/src/js/horario_simple_commun.js"/>
            <script type="text/javascript" src="/odoo_auto_timetables/static/src/js/horario_simple.js"/>

        </template>
    </data>
</odoo>