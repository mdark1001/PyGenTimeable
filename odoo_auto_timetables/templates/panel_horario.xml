<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="horarios_extend.panel_horario" name="Horarios">


            <div class="panel panel-default">
                <div class="panel-heading" role="tab"
                     id="headingOne">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse"
                           data-parent="#grupos"
                           t-attf-href="#panel_grupo_{{grupo.id}}"
                           aria-expanded="true"
                           aria-controls="collapseOne">

                            <t t-esc="grupo.grupo_id.name"></t>
                            <t t-esc="grupo.grupo_id.code"></t>
                        </a>
                    </h4>

                    <span class=""></span>
                </div>
                <div t-attf-id="panel_grupo_{{grupo.id}}"
                     class="panel-collapse collapse in"
                     role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">
                        <t t-if="grupo.state=='borrador'">
                            <button class="btn btn-info pull-right btnPublicarHorario"
                                    t-attf-data-id_horario="{{grupo.id}}"
                            >
                                Publicar horario
                            </button>
                        </t>
                        <t t-if="grupo.state=='publicado'">
                            <button class="btn btn-danger pull-right btnMHacerModificaciones"
                                    t-attf-data-id_horario="{{grupo.id}}"
                            >
                                Modificar
                            </button>
                        </t>


                        <ul>
                            <li>CÃ³digo:
                                <b>
                                    <t t-esc="grupo.grupo_id.code"></t>
                                </b>
                            </li>
                            <li>Cuatrimestre:
                                <b>
                                    <t t-esc="grupo.grupo_id.cuatrimestre"></t>
                                </b>
                            </li>
                            <li>Carrera:
                                <b>
                                    <t t-esc="grupo.grupo_id.carrera_id.name"></t>
                                </b>
                            </li>
                            <li>Total de Materias:
                                <b>
                                    <t t-esc="len(grupo.horario_id)"></t>
                                </b>
                            </li>
                            <li>Plan de estudios:
                                <b>
                                    <t t-esc="grupo.planestudios_id.name"></t>
                                </b>
                            </li>
                            <li>Periodo
                                <b>
                                    <t t-esc="grupo.periodo_id.name"></t>
                                </b>
                            </li>
                            <li>Estatus
                                <t t-if="grupo.state=='borrador'">
                                    <label class="label label-info"
                                           t-attf-id="estatus_{{grupo.id}}">
                                        Borrador
                                    </label>
                                </t>
                                <t t-if="grupo.state=='publicado'">
                                    <label class="label label-success"
                                           t-attf-id="estatus_{{grupo.id}}">
                                        Publicado
                                    </label>
                                </t>

                            </li>


                        </ul>
                        <t t-call="horarios_extend.table_horario"/>

                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>